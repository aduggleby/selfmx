---
const navLinks = [
  { href: "/install", label: "Install" },
  { href: "/api", label: "API" },
  { href: "/backups", label: "Backups" },
  { href: "/changelog", label: "Changelog" },
];
---

<header>
  <nav class="mb-8 flex items-center justify-between md:mb-16">
    <a
      href="/"
      class="text-sm font-bold text-zinc-900 hover:text-green-600 sm:text-xl dark:text-white dark:hover:text-green-400"
    >
      <span class="text-green-700">Self</span><span class="text-green-600">MX</span>
      <span class="hidden text-zinc-500 sm:inline dark:text-zinc-400">- email API</span>
    </a>
    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="flex items-center justify-center rounded p-2 text-zinc-600 hover:bg-zinc-100 md:hidden dark:text-zinc-400 dark:hover:bg-zinc-800"
      aria-label="Toggle menu"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    <!-- Desktop navigation -->
    <div class="hidden items-center gap-6 md:flex">
      {
        navLinks.map(({ href, label }) => (
          <a
            href={href}
            class="font-semibold text-zinc-500 hover:text-green-600 dark:text-zinc-400 dark:hover:text-green-400"
          >
            {label}
          </a>
        ))
      }
      <a
        href="https://github.com/aduggleby/selfmx"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1 font-semibold text-zinc-500 hover:text-green-600 dark:text-zinc-400 dark:hover:text-green-400"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        GitHub
      </a>
      <button
        id="theme-toggle"
        title="Toggle dark mode"
        class="flex h-8 w-8 items-center justify-center rounded text-zinc-500 hover:bg-zinc-100 hover:text-zinc-700 dark:text-zinc-400 dark:hover:bg-zinc-800 dark:hover:text-zinc-200"
      >
        <span id="theme-icon">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
            ></path>
          </svg>
        </span>
      </button>
    </div>
  </nav>
  <!-- Mobile navigation menu -->
  <div
    id="mobile-menu"
    class="mb-8 hidden rounded-lg border border-zinc-200 bg-zinc-50 p-4 md:hidden dark:border-zinc-700 dark:bg-zinc-800"
  >
    <div class="flex flex-col gap-3">
      {
        navLinks.map(({ href, label }) => (
          <a href={href} class="font-semibold text-zinc-600 hover:text-green-600 dark:text-zinc-300">
            {label}
          </a>
        ))
      }
      <a
        href="https://github.com/aduggleby/selfmx"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 font-semibold text-zinc-600 hover:text-green-600 dark:text-zinc-300"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        GitHub
      </a>
      <div class="border-t border-zinc-200 pt-3 dark:border-zinc-700">
        <button id="mobile-theme-toggle" class="flex items-center gap-2 text-sm text-zinc-600 dark:text-zinc-300">
          <span id="mobile-theme-icon" class="flex h-4 w-4 items-center justify-center">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
              ></path>
            </svg>
          </span>
          <span>Toggle theme</span>
        </button>
      </div>
    </div>
  </div>
</header>
